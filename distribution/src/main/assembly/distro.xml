<assembly>
    <id>mql-distribution</id>
    <baseDirectory></baseDirectory>
    <formats>
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>../examples/src</directory>
            <outputDirectory>examples</outputDirectory>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>../examples/pom.xml</source>
            <outputDirectory>examples</outputDirectory>
        </file>
    </files>
    
    <dependencySets>
        <dependencySet>
            <includes>
                <include>org.mule.mql:mql-examples:zip</include>
            </includes>
            <outputDirectory>examples</outputDirectory>
            <useProjectArtifact>false</useProjectArtifact>
        </dependencySet>
        <dependencySet>
            <includes>
                <include>org.mule.mql:mql</include>
            </includes>
            <excludes>
                <exclude>org.mule.mql:mql-examples:zip</exclude>
                <exclude>org.mule.mql:mql-mule:zip</exclude>
            </excludes>
            <outputDirectory>lib</outputDirectory>
            <useTransitiveFiltering>true</useTransitiveFiltering>
        </dependencySet>
        <dependencySet>
            <includes>
                <include>org.mule.mql:mql-mule</include>
            </includes>
            <outputDirectory>lib</outputDirectory>
            <useTransitiveDependencies>false</useTransitiveDependencies>
            <useProjectArtifact>false</useProjectArtifact>
        </dependencySet>
    </dependencySets>

</assembly>
